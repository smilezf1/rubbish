/* pages/star/star.wxss */
page{
  height:100%;
}
.item{
  border-top:2rpx solid #f2f2f2;
  padding:40rpx 40rpx 20rpx 40rpx;
  box-sizing:border-box;
   position:relative; 
}
.imgBox1{
  width:440rpx;
}
.imgBox image,.imgBox1 image{
  margin-right:10rpx;
}
.img1{
 width:210rpx;
 height:210rpx;
}
/* 遮罩层 */
.shade{
 background:rgba(0, 0, 0, 0.5);
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0; 
}

/* 自定义弹窗组件 */
.window{
  width:500rpx;
 background:white;
  position:fixed;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%); 
  border-radius:10rpx;
 padding-top:20rpx;
  z-index:2;
}
.window .title{
  text-align:center;
  padding:10rpx 0 30rpx;
}
.window .button{
  display:flex;
  justify-content:space-between;
  align-content:flex-end;
  border-top:2rpx solid #f2f2f2;
 
}
.window .button button{
  width:45%;
background: white;
padding:0 20rpx;
font-size:30rpx;
border-radius:none !important;
}
/* 去除按钮的边框 */
.window .button button:after{
  border:none;
}
.item-top image{
  width:90rpx;
  border-radius:50%;
  float:left;
}
.item-top .txt{
  margin-left:20rpx;
  position:relative;
  top:14rpx;
  float:left;
}
.item-top .villageName{
  font-weight:550;
  font-size:32rpx;
  margin-top:-10rpx;
}
.item-top .issueTime{
  font-size:26rpx;
  color:#AFAFAF;
}
.item-top:after{
  content:"";
  display:block;
  clear:both;
}

.item-content .title{
  margin:10rpx 0;
  color:#616161;
  padding:10rpx 0;
}
.item-content .container{
  margin-top:10rpx;
}
.item-content .praise{
  margin-top:10rpx;
  position:relative;
  height:40rpx;
}
.item-content .praise image{
  width:30rpx;
  padding-right:40rpx;
  position:absolute;
  right:10rpx;
  top:6rpx;
}
.item-content .praiseNum{
  color:#999;
  position:absolute;
  right:20rpx;
}
.publish{
  position:fixed;
  right:0;
}
