/* pages/advise/index.wxss */
.advise {
  padding:20rpx;
  border-top:1rpx solid #EEEEEE;
}
.textarea {
  width: 100%;
  height: 370rpx;
}
.textarea:focus{
  color:transparent;
}
.addimg  image {
  width: 78rpx;
  height: 78rpx;
}
.addimg .feedbackImg{
   width:32%;
   margin-right:9rpx;
   display:inline-block;
   overflow:hidden;
   box-sizing:border-box; 
   position:relative;
   padding:15rpx 15rpx 0 0;
}
.addimg .feedbackImg image{
  width:40rpx;
  height:40rpx;
  position:absolute;
  top:2rpx;
  right:0rpx;
  z-index:2;
}
 .line {
  height: 60rpx;
  line-height: 60rpx;
  border-top: 1rpx solid #DBDBDB;
  margin: 24rpx 0 0;
  text-align:right;font-size:24rpx;color:#999
}
.sTabel .num{
  color:#126FFF
}

.sTabel .submit {
  width: 100%;
  height: 95rpx;
  background: rgba(62, 159, 210, 1);
  border-radius: 8rpx;
  color: #fff;
  margin-top:23rpx;
}
