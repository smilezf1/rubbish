/* pages/stone/stone.wxss */
page{
  height:100%;
  background:#F2F2F2;
  border-top:2rpx solid #E1E1E1;
  padding:0 40rpx;
  box-sizing:border-box;
}
.article-item{
  margin-bottom:20rpx;
}
.article-item .time{
  color:#666;
  text-align:center;
  padding:20rpx 0;
}
.main-img .pic{
 width:100%;
 border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
}
.main-container{
  background:white;
  padding:20rpx;
  position:relative;
  top:-9rpx;
  border-bottom-left-radius:10rpx;
  border-bottom-right-radius: 10rpx;
}
.main-container-title{
  font-size:40rpx;
}
.main-container-content{
  color:#8D8D8D;
  height:82rpx;
  overflow:hidden;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  margin-top:10rpx;
}