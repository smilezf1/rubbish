<view class="stone">
<view class="article">
<view class="article-item" wx:for="{{listItem}}" wx:key="{{item.id}}">
<navigator  hover-class="none" url="/pages/stone/content/content?id={{item.id}}">
<view class="top">
<view class="left">
<image src="/static/images/logo.png" mode="widthFix" style="width:70rpx"></image>
<text style="color:#696B8D;font-weight:800;position:relative;top:-20rpx;left:10rpx">莘生活 慧分类</text>
</view>
<view class="right time">{{item.createtime}}</view>
</view>
<view class="main">
<view class="main-img"><image src="{{item.pic}}" mode="widthFix" class="pic"></image></view>
<view class="main-container">
<view class="main-container-title">{{item.title}}</view>
<!-- <view class="main-container-content">{{item.P1}}</view> -->
</view>
</view>
</navigator>
</view>
</view>
</view>