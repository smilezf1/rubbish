/* pages/wenda/wenda.wxss */
.wenda {
  box-sizing: border-box;
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding:36rpx;
}
.wenda>.top{
  height:100rpx;
  line-height:100rpx;
}
.wenda .content .top{
  width:100%;
  position:absolute;
  top:0;
  left:0;
  display: flex;
  flex-wrap:wrap;
  margin-top:40rpx;
   text-align: center;
}
.wenda .content .details{
  position:absolute;
  left:0;
  top:186rpx;
  padding:0 20rpx;
  text-indent:2em;
  color:#343434;
  line-height:38rpx; 
  margin-top:-4rpx;
  font-size:26rpx;
}
.wenda .top .logo{
width: 66rpx;
position:relative;
top:18rpx;
}
.wenda .top{
color:#26919E;
}
.wenda .top .title{
  width:100%;
}
.wenda .top .subtitle{
  font-size:26rpx;
  margin-bottom:10rpx;
}
.wenda-num{
  color:white;
  font-size:24rpx;
  float:right;
}
.wenda-num .num1{
  font-size:40rpx;
}
.wenda .number text{
  font-weight:bold;
  font-size:42rpx;
}
.wenda .content {
  position: relative;
  box-sizing: border-box;
  width:100%;
  height:88%;  
}
.wenda .content-img{
  width:100%;
  height:100%;
}
.wenda .content .top view{
  flex-grow:1;
}
.ctrl-btn {
  width: 160rpx;
  height: 48rpx;
  position: absolute;
  right: 48rpx;
  bottom: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ctrl-btn image {
  width: 48rpx;
  height: 48rpx;
}
.wenda .title {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 42rpx;
}
.wenda .subtitle {
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
  margin-top:16rpx;
  margin-bottom:4rpx;
  }
